<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url :thumb %>
      <h1><%= t ".email" %><strong><%= @user.email %></strong></h1>
    </section>
    <section class="stats">
      <%= render "stats" %>
    </section>
    <%= render "follow_form" %>
  </aside>
  <aside class="col-md-8">
    <%= render "posts/form" if current_user == @user %>
  </aside>
</div>
