<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.avatar.url(:thumb), class: "img" %>
      <div class= "info">
        <strong><%= t ".name" %><%= user.name %></strong>
        <strong><%= t ".email" %><%= user.email %></strong>
        <strong><%= link_to t(".viewprofile"), user_path(user) %></strong>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @users, theme: "twitter-bootstrap-3" %>
