<%= form_for resource, as: resource_name, url: session_path(resource_name),
  html:{class: "col-md-offset-2"} do |f| %>
  <h2><%= t ".caption" %></h2>

  <div class="input-group col-md-8">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user">
      <%= f.label :email %></i></span>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="input-group col-md-8">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock">
    <%= f.label :password %></i></span>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <button class="btn btn-primary col-md-8"><%= t ".btn_submit" %></button>
  </div><br>

  <%= render "devise/shared/links"%>
<% end %>
