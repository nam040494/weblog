<%= form_for resource, as: resource_name, url: registration_path(resource_name),
  html: {class: "col-md-offset-2"} do |f| %>
  <%= devise_error_messages! %>
  <h2><%= t ".caption" %></h2>
  <div class="input-group col-md-8">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user">
      <%= f.label :name %></i></span>
    <%= f.text_field :name , class: "form-control"%>
  </div>

  <div class="input-group col-md-8">
    <span class="input-group-addon">
      <i class="glyphicon glyphicon-lock"><%= f.label :email %></i>
    </span>
    <%= f.email_field :email, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="input-group col-md-8">
    <span class="input-group-addon">
      <i class="glyphicon glyphicon-lock"><%= f.label :password %></i>
    </span>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="input-group col-md-8">s
    <span class="input-group-addon">
      <i class="glyphicon glyphicon-lock"><%= f.label :password_confirmation %></i>
    </span>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <button class="btn btn-primary col-md-8"><%= t(".btn_submit") %></button>
  </div>
<% end %>
